---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    {frontmatter.image && (
      <img src={frontmatter.image.url} class="post-header-image" width="100%" alt={frontmatter.image.alt} />
    )}
    <p>
      {frontmatter.pubDate.toLocaleString('en-US', {
        month: 'long',
        day: 'numeric',
        year: 'numeric'
      })}
    </p>
    
    <div class="main-content">
      <slot />
    </div>

    <h4>Tags</h4>
    <ul class="tags">
        {frontmatter.tags.map((tag) => (
            <li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>
        ))}
    </ul>
</BaseLayout>

<style>
    .main-content {
      margin: 20px 0 40px 0;
    }

    .post-header-image {
        object-fit: cover;
    }

    a {
      color: #00539F;
    }
  
    .tags {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        gap: 10px;
        padding: 0;
    }
  
    .tag {
    }
  </style>
